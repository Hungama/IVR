<?xml version="1.0" encoding="UTF-8"?>



<vxml version="2.0" application="Hungama_54646_ServicesRoot.vxml"

	xmlns="http://www.w3.org/2001/vxml"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

	xsi:schemaLocation="http://www.w3.org/2001/vxml http://www.w3.org/TR/voicexml20/vxml.xsd">



	<meta name="Hungama_54646_UserSub.vxml" content="" />

	<meta name="Author" content="" />

	<meta name="Date" content="" />

	<meta name="Description" content="" />

	<meta name="Support" content="" />
	<var name="delay_flag" expr="0"/>

    <script>		
		var out_string=new Object();
	</script>
    
    <form id="SubIntro">
	<block>	
	<assign name="Section_Name" expr="'SUBSCRIPTION '"/>
			<assign name="amt" expr="'30'"/>
			<assign name="plan_id" expr="'1'"/>
			<assign name="service_id" expr="'1302'"/>
			<if cond="directact_flag=='1'">
				 <script srcexpr="'http://'+IP+'/'+servlet_path+'/'+dbservlet+'?PROCEDURE=JBOX_SUB&amp;INTOKEN=7&amp;OUTTOKEN=0&amp;INPARAM[0]='+ANI+'&amp;INPARAM[1]='+lang+'&amp;INPARAM[2]=IVR&amp;INPARAM[3]='+DNIS+'&amp;INPARAM[4]='+amt+'&amp;INPARAM[5]='+service_id+'&amp;INPARAM[6]='+plan_id"/>         
				  <goto next="Hungama_54646_NewUser_Directact.vxml#LANGSEL1"></goto>
			</if>
		
		<goto next="#SubOption"/>
	</block>
     </form>
	
	
	<form id="SubOption">
		<field name="choice">			
			<grammar mode="dtmf" root="start">
						<rule id="start" scope="public">
							<one-of>
								 <item>  1  </item>								
							</one-of>
						</rule>
				</grammar>
			<prompt bargein="true" timeout="3s">
				<audio expr="promptspath_54646+'/'+lang+'/subintro.wav'"/>				
			</prompt>						
			<filled>
				<if cond="choice=='1'">
				    <script srcexpr="'http://'+IP+'/'+servlet_path+'/'+dbservlet+'?PROCEDURE=JBOX_SUB&amp;INTOKEN=7&amp;OUTTOKEN=0&amp;INPARAM[0]='+ANI+'&amp;INPARAM[1]='+lang+'&amp;INPARAM[2]=IVR&amp;INPARAM[3]='+DNIS+'&amp;INPARAM[4]='+amt+'&amp;INPARAM[5]='+service_id+'&amp;INPARAM[6]='+plan_id"/>         
				    <goto next="#SubRequest"></goto>
				</if>				
			</filled>
		</field>
		<noinput count="1">
			<prompt bargein="true" timeout="0s">
				<audio expr="promptspath_54646+'/'+lang+'/waiting_response.wav'"/>
			</prompt>			
			<reprompt></reprompt>
		</noinput>
		<noinput count="2">
			<prompt bargein="true" timeout="0s">
				<audio expr="promptspath_54646+'/'+lang+'/waiting_response.wav'"/>
			</prompt>			
			<reprompt></reprompt>
		</noinput>
		<noinput count="3">
			<goto next="Hungama_54646_End.vxml"></goto>
		</noinput>
		<nomatch count="1">
			<prompt bargein="true" timeout="0s">
				<audio expr="promptspath_54646+'/'+lang+'/invalidoption.wav'"/>
			</prompt>			
			<reprompt></reprompt>
		</nomatch>
		<nomatch count="2">
			<prompt bargein="true" timeout="0s">
				<audio expr="promptspath_54646+'/'+lang+'/invalidoption.wav'"/>
			</prompt>			
			<reprompt></reprompt>
		</nomatch>
		<nomatch count="3">
			<goto next="Hungama_54646_End.vxml"></goto>
		</nomatch>
	</form>
	
		
	<form id="SubRequest">
		<field name="choice1">			
			<grammar mode="dtmf" root="start">
				<rule id="start" scope="public">
					<one-of>
						 <item>  1  </item>								
					</one-of>
				</rule>
			</grammar>
			<prompt bargein="false" timeout="0s">
			<audio expr="promptspath_54646+'/'+lang+'/charging_wait.wav'"/>
			</prompt>					
			<filled>
				<goto next="#checkingrequest"/>					
			</filled>
		</field>
		<noinput>
			<goto next="#checkingrequest"/>					
		</noinput>
		<nomatch>
			<goto next="#checkingrequest"/>					
		</nomatch>
	</form>
	<form id="checkingrequest">
	<block>
		<script srcexpr="'http://'+IP+'/'+servlet_path+'/ar_ReadConfigSong?ConfigPath=54646config_V2/'+operator+'/mwconfig/songconfig/0101.cfg'"/>
				<script>
						array1.length=0;
				</script>
				<assign name="len" expr="favSongs.length" />
				<assign name="var_wel" expr="getRandom(1,len)" />
				<log>previous Array[1]  is	<value expr="favSongs[var_wel]"/>    </log>
				
				<script>
					songcheck=favSongs[var_wel].split("_");
					contentdir=songcheck[0]; 
					song = favSongs[var_wel];
	
				</script>
		<goto next="#checkingrequest1"/>			
				
	
	</block>
	</form>
	<form id="checkingrequest1">
	<block>
	<script>
	
		delay_flag=delay_flag+1;
	</script>
	</block>
			<field name="choice1">			
				<grammar mode="dtmf" root="start">
					<rule id="start" scope="public">
						<one-of>
							 <item>  1  </item>								
						</one-of>
					</rule>
				</grammar>
				<prompt bargein="true" timeout="1s" cond="delay_flag =='1' || delay_flag =='2'">
					 <audio expr="contentpath+contentdir+'/'+song+'.wav'"/>
				</prompt>					
				<filled>
					<goto next="#BillStatusChk"/>					
				</filled>
			</field>
			<noinput>
				<goto next="#BillStatusChk"/>					
			</noinput>
			<nomatch>
				<goto next="#BillStatusChk"/>					
			</nomatch>
	</form>
	
	

	<form id="BillStatusChk">
		<block>
			<!-- SUB REQUEST STATUS -->
			<script srcexpr="'http://'+IP+'/'+servlet_path+'/'+dbservlet+'?PROCEDURE=JBOX_QUERY&amp;INTOKEN=2&amp;OUTTOKEN=1&amp;INPARAM[0]='+ANI+'&amp;INPARAM[1]=1'"/>
			<script>
			 <![CDATA[
					   for(j=0; j< out_string.length;  j++)
						  {  	  
						       if(j==0)
						       	usr_status = out_string[j];
						       if(j==1)
						       	lang = out_string[j];
						       if(j==2)
						       	balance = out_string[j];							      
						  }

					]]>
			
			</script>
			<log expr="'usr_status @@@@@@@@@ '+usr_status"></log>
			<log expr="'lang @@@@@@@@@ '+lang"></log>
			<log expr="'balance @@@@@@@@@ '+balance"></log>
			<if cond="usr_status=='-1'">
				<if cond="delay_flag =='1'">
					<goto next="#checkingrequest"/>
				</if>
				<if cond="directact_flag=='1'">
					<goto next="Hungama_54646_End.vxml"/>
				</if>
				<prompt bargein="true" timeout="0s">
					<audio expr="promptspath_54646+'/'+lang+'/delay_charging.wav'"/>
				</prompt>
				<goto next="Hungama_54646_End.vxml"/>
			<elseif cond="usr_status=='1'"/>
					<if cond="directact_flag=='1'">
						<script> 					 
							balance=balance*60;
							timerflag=1;      
						</script>							
						<script>
							<![CDATA[
								if(timerflag==1)
								start_BalenceMinute=starttime();
							]]>	 	
						</script>
						<log expr="'lang @@@@@@@@@ '+lang"></log>
						<log expr="'balance @@@@@@@@@ '+balance"></log>	
						<goto next="Hungama_54646_MainMenu.vxml"></goto>
					
					</if>
				<prompt bargein="true" timeout="0s">
					<audio expr="promptspath_54646+'/'+lang+'/thank_sub.wav'"/>
				</prompt>
					<script> 					 
						balance=balance*60;
						timerflag=1;      
					</script>							
					<script>
						<![CDATA[
							if(timerflag==1)
							start_BalenceMinute=starttime();
						]]>	 	
					</script>
					<log expr="'lang @@@@@@@@@ '+lang"></log>
					<log expr="'balance @@@@@@@@@ '+balance"></log>	
				<goto next="Hungama_54646_MainMenu.vxml"></goto>	
			<else/> 
				<if cond="directact_flag=='1'">
					<goto next="Hungama_54646_End.vxml"/>
				</if>
				<prompt bargein="true" timeout="0s">
					<audio expr="promptspath_54646+'/'+lang+'/delay_charging.wav'"/>
				</prompt>
				<goto next="Hungama_54646_End.vxml"></goto>
			</if>
		</block>
	</form>
</vxml>