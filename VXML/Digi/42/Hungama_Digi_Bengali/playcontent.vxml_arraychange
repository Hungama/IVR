	<form id="NoMatchCheckTime">
		
		<field name="choice">
			<grammar mode="dtmf" root="start">
						<rule id="start" scope="public">
							<one-of>
							         <item>  0  </item>
								 <item>  1  </item>
								 <item>  2  </item>
								 <item>  3  </item>
								 <item>  4  </item>
								 <item>  5  </item>
								 <item>  6  </item>
								 <item>  7  </item>
								 <item>  8  </item>
								 <item>  9  </item>
								 <item>  *  </item>
								 <item>  #  </item>
							</one-of>
						</rule>
				</grammar>
			<prompt bargein="true" timeout="0s">
				<audio expr="promptpath+LANG_DESCRIPTION+'/invalidoption.wav'"/>
			</prompt>

			<filled>
				<if cond="choice=='1'">
					<script> unike_play=unike_play+1</script>
					<goto next="#StartToPlaysongs"/> 
				<elseif cond="choice=='2'"/>
					<script> unike_play=unike_play</script>
					<goto next="#StartToPlaysongs"/> 
				<elseif cond="choice=='3'"/>
					<script> unike_play=unike_play-1</script>
					<goto next="#StartToPlaysongs"/> 
				<elseif cond="choice=='6'"/>
					<assign name="CALCULATE_TIME" expr="'RESET'" />
					<goto next="#playoption"/>
				<elseif cond="choice=='7'"/>
					<assign name="CALCULATE_TIME" expr="'RESET'" />
					 <script>
						playconfigcat = playconfig.substring(0,2);
					 </script>
					 <goto next="DIGI_MOD.vxml#FETCHCATGORY"/>
				<elseif cond="choice=='8'"/>
					 <assign name="CALCULATE_TIME" expr="'RESET'" />
					 <goto next="New_MainMenu.vxml"/>
				<elseif cond="choice=='9'"/>
					 <assign name="CALCULATE_TIME" expr="'RESET'" />
					 <goto next="ManageAccount.vxml"/>
				<elseif cond="choice=='*'"/>
					 <assign name="CALCULATE_TIME" expr="'RESET'" />
					 <goto next="CRBT.vxml"/>
				<else/>
					<goto next="#NoMatchCheckTime"/> 
				</if>				
			</filled>

			<noinput>				
				<script> unike_play=unike_play</script>
				<goto next="#StartToPlaysongs"/> 
			</noinput>
			
		</field>
			
	</form>
	
	<form id="playoption">
	    
	      <field name="playclipOptionInfo">
			<grammar mode="dtmf" root="start" version="1.0">
               	<rule id="start" scope="public">
                  <one-of>				 
					  <item>1</item>
					  <item>2</item>	
					  <item>3</item>				
