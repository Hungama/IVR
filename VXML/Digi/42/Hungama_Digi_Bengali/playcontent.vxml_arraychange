			<script>
				<![CDATA[
					   for(k=0; k<len ;  k++)
					   {  	  
								array[k] = favSongs[k];						   
					   }

				]]>		
			</script> 
			 <log expr="'start page @@@@@@ left balance is '+balance"/>	
					<assign name="unike_play" expr="getRandom(1,len)" />	       					       
			<goto next="#PlayFullSongs"/>  					
		   </block>
	</form>

	
<form id="PlayFullSongs"> 
		  
	 <field name="keypadoption">               
		    	 
		<grammar mode="dtmf" root="start" version="1.0">
                   	<rule id="start" scope="public">
                     	<one-of>     
					    <item>1</item>
			                    <item>2</item>
					    <item>3</item>
			                    <item>6</item>
			                    <item>7</item>
				            <item>8</item>
                          	       	   <item>9</item>
                    	</one-of>
                	</rule>
               	</grammar>
               	
             <prompt bargein="true"  timeout="1s">
                 	<audio expr="promptpath+LANG_DESCRIPTION+'/keypad.wav'"/>
		   </prompt> 
				 
        <filled>              
		<if cond="keypadoption=='6'">	
			 <goto next="#playoption"/>
    		<elseif cond="keypadoption=='7'"/>
			<script>
				playconfigcat = playconfig.substring(0,2);
			 </script>
			 <goto next="DIGI_MOD.vxml#FETCHCATGORY"/> 
		<elseif cond="keypadoption=='8'"/>
			<goto next="New_MainMenu.vxml"/>
		<elseif cond="keypadoption=='9'"/>
			<goto next="ManageAccount.vxml"/>	 
		<else/>                							 				 					 		         
			 <goto next="#StartToPlaysongs"/>
		</if>	
          </filled>
	     <noinput>
	             	<goto next="#StartToPlaysongs"/>	     
              </noinput>
              
              <nomatch>
			<goto next="#StartToPlaysongs"/>
	      </nomatch>		
          </field>		
</form>
	
