		<grammar mode="dtmf" root="start1" version="1.0">
					<rule id="start1" scope="public">
						<one-of>
							 <item>  8 </item>
						</one-of>
					</rule>
		</grammar>
				
		<prompt bargein="true"  timeout="0s">
     				<audio expr="promptpath+'/'+LANG_DESCRIPTION+'/rule_'+i+'.wav'"/>
     		</prompt>
				
			<filled>
				<if cond="gamerule == '8'">
					<goto next="MainMenu.vxml#MainExist"/>
